<h1><%= @collection.name %></h1>
<b>Leerjaar: <%= @collection.year %></b><br>

<p>
  <%= @collection.description %>
</p>

<h3>Opdrachten</h3>
<%= link_to 'Opdrachten toevoegen', new_admins_collection_assignment_path(@collection) %>

<table>
  <thead>
    <tr>
      <th>Vraag</th>
      <th>Antwoord</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
  <% @assignments.each do |a| %>
    <tr>
      <td>
        <%= a.question %>
      </td>
      <td>
        <%= a.answer %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= link_to 'Back', admins_collections_path(:collection) %>
<%= link_to 'Edit', edit_admins_collection_path(@collection) %>


